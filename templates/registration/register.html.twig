<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
</head>
<body>

    <!-- HEADER -->
    <header>
        <nav>
            <ul class="nav-links">
                <li><a href="{{ path('home') }}">Accueil</a></li>
            </ul>
        </nav>
    </header>

    <!-- CONTENU PRINCIPAL -->
    <main class="login-container">
        <form method="post" class="login-form">
            <h1 class="form-title">Inscription</h1>
            <p class="form-subtitle">Créez un compte pour accéder aux recettes.</p>

            <div class="form-group">
                {{ form_label(form.uuid, 'Pseudo') }}
                {{ form_widget(form.uuid, { 'attr': {'class': 'form-input'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password, 'Mot de passe') }}
                {{ form_widget(form.password, { 'attr': {'class': 'form-input'} }) }}
            </div>

            <p class="remember-me">
                Déjà un compte ? <a href="{{ path('app_login') }}" class="logout-link">Connectez-vous ici.</a>
            </p>

            <div class="form-actions">
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
            </div>

            {{ form_end(form) }}
        </form>
    </main>

</body>
</html>
