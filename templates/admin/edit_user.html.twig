<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Modifier un utilisateur</title>
        <link rel="stylesheet" href="{{ asset('css/edit.css') }}">
    </head>
    <body>

        <div class="container">
            <h1>Modifier l'utilisateur {{ user.uuid }}</h1>

            <form method="post">
                {{ form_start(form) }}
                    <div class="form-group">{{ form_row(form.uuid) }}</div>
                    <div class="form-group">{{ form_row(form.password) }}</div>
                    <div class="form-group">{{ form_row(form.roles) }}</div>
                    <div class="form-actions">{{ form_row(form.submit) }}</div>
                    <a href="{{ path('admin_dashboard') }}" class="b">Retour</a>
                {{ form_end(form) }}

            </form>
        </div>

    </body>
</html>
